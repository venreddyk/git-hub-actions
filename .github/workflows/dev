name: Tibco Workflow

on:
  
  pull_request:
    branches: [ release ]

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v2


      - name: Set up JDK
        uses: actions/setup-java@v2
        with:
         java-version: 11.0.16+8
         distribution: 'adopt'
         cache: maven

          
      - name: Build BW6 Application
        run: mvn clean install -f src/es.alertsManagment.service.v1.application.parent/pom.xml
		
  Tag_version:
    
     needs: build
     runs-on: ubuntu-latest
     steps:
      - uses: actions/checkout@v2     
      - uses: christophebedard/tag-version-commit@v1
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
		  
		  
  Artifcat-snapshort:
  
    needs : Tag_version
    runs-on: ubuntu-latest
    steps:
      - uses: actions/upload-artifact@v3
        with:
         java-version: 11.0.16+8
         distribution: 'adopt'
         name: my-artifact
		
  Deploy-Dev : 
    needs : Artifcat-snapshort
    runs-on : ubuntu-latest
    steps:	
    - name: Deploy to TIBCO Enterprise Administrator
     #uses: tibcosoftware/tibco-action-deploy@v1.1.0
      uses: actions/checkout@v3
			
  approval:
    needs: Deploy-Dev
    runs-on: ubuntu-latest

    steps:
      - name: CINotify Email
  # You may pin to the exact commit or the version.
  # uses: cinotify/github-action@d99e3149178b27572a58ace227621c333884e3fb
        uses: cinotify/github-action@v1.1.0
        with:
    # Recipient email address
          to: ndey@tibco.com,venreddy@tibco.com

    # Email subject
          subject: approval request to deploy in QA/UAT ENV for the aplication ( TEST ) 
    # Email body
          body: please approve ( https://github.com/ogeenergycorp/es.alertsManagment.service.v1)		

#After getting approval job will be start 

  download-artifact:
    needs: approval
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Set up JDK 1.8
      uses: actions/setup-java@v1
      with:
        java-version: '1.8'
        distribution: 'adopt'
        cache: maven
    - name: Build with Maven
      run: echo " downloading artifact "
